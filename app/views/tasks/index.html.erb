<h1>Tasks</h1>

<ul>
<% @tasks.each do |task| %>
 <li><input type="checkbox" <%= task.completed ? "checked" : "" %> disabled ><%= link_to task.title, task_path(task) %><%= link_to "          -",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete?" } %> </li>
<% end %>
</ul>

<%= link_to "+ Add a new task", new_path %>
